{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build", "node_modules", "jest.config.js"],
  "typeRoots": ["./typings", "./node_modules/@types/"]
}
